{
  "manifest_version": 3,
  "name": "TaskMaster - Productivity Tracker",
  "version": "1.0",
  "permissions": ["storage", "notifications", "activeTab", "alarms", "camera"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
